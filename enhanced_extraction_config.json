{
  "settings": {
    "max_extraction_length": 100,
    "trim_whitespace": true,
    "remove_special_chars": false,
    "default_value_if_not_found": "NOT_FOUND"
  },
  "configurations": [
    {
      "name": "Invoice_Number",
      "max_length": 3,
      "patterns": [
        {
          "before_text": "ABC Corporation",
          "after_text": "Business Street Business",
          "case_sensitive": false,
          "max_length": 30,
          "match_index": 0
        },
        {
          "before_text": "Invoice #:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 30,
          "match_index": 0
        }
      ]
    },
    {
      "name": "Total_Amount",
      "max_length": 30,
      "patterns": [
        {
          "before_text": "Total:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20,
          "match_index": 0
        },
        {
          "before_text": "Amount Due:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20,
          "match_index": 0
        }
      ]
    },
    {
      "name": "Company_Name",
      "max_length": 80,
      "patterns": [
        {
          "before_text": "Company:",
          "after_text": "Invoice",
          "case_sensitive": false,
          "max_length": 60,
          "match_index": 0
        },
        {
          "before_text": "Bill To:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 60,
          "match_index": 0
        }
      ]
    },
    {
      "name": "Date",
      "patterns": [
        {
          "before_text": "Date:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20,
          "match_index": 0
        },
        {
          "before_text": "Invoice Date:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20,
          "match_index": 0
        }
      ]
    },
    {
      "name": "Second_Total_Amount",
      "max_length": 30,
      "patterns": [
        {
          "before_text": "Total:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20,
          "match_index": 1,
          "comment": "This will extract the SECOND occurrence of 'Total:' instead of the first"
        }
      ]
    },
    {
      "name": "Third_Date",
      "patterns": [
        {
          "before_text": "Date:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20,
          "match_index": 2,
          "comment": "This will extract the THIRD occurrence of 'Date:' instead of the first"
        }
      ]
    }
  ]
}