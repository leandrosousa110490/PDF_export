{
  "settings": {
    "max_extraction_length": 100,
    "trim_whitespace": true,
    "remove_special_chars": false,
    "default_value_if_not_found": "NOT_FOUND",
    "fuzzy_matching_threshold": 0.8
  },
  "configurations": [
    {
      "name": "Invoice_Number",
      "max_length": 3,
      "fuzzy_threshold": 0.8,
      "patterns": [
        {
          "before_text": "ABC Corporation",
          "after_text": "Business Street Business",
          "case_sensitive": false,
          "max_length": 30
        },
        {
          "before_text": "Invoice #:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 30
        },
        {
          "regex_pattern": "(?:Invoice|INV)[-#:\\s]*([A-Z0-9-]+)",
          "max_length": 30
        }
      ]
    },
    {
      "name": "Total_Amount",
      "max_length": 30,
      "fuzzy_threshold": 0.7,
      "patterns": [
        {
          "before_text": "Total:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20
        },
        {
          "before_text": "Amount Due:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20
        },
        {
          "regex_pattern": "(?:Total|Amount Due|Grand Total)[:$\\s]*(\\$?[\\d,]+\\.?\\d*)",
          "max_length": 20
        }
      ]
    },
    {
      "name": "Company_Name",
      "max_length": 80,
      "fuzzy_threshold": 0.8,
      "patterns": [
        {
          "before_text": "Company:",
          "after_text": "Invoice",
          "case_sensitive": false,
          "max_length": 60
        },
        {
          "before_text": "Bill To:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 60
        },
        {
          "regex_pattern": "Company:\\s*([A-Za-z\\s&.,'-]+?)(?:\\s*Invoice|\\s*$)",
          "max_length": 60
        }
      ]
    },
    {
      "name": "Date",
      "max_length": 25,
      "fuzzy_threshold": 0.8,
      "patterns": [
        {
          "before_text": "Date:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20
        },
        {
          "before_text": "Invoice Date:",
          "after_text": "\n",
          "case_sensitive": false,
          "max_length": 20
        },
        {
          "regex_pattern": "(?:Date|Invoice Date)[:]\\s*(\\d{1,2}[/-]\\d{1,2}[/-]\\d{2,4})",
          "max_length": 15
        }
      ]
    }
  ]
}