{
  "settings": {
    "text_files_folder": "extracted_text_files",
    "output_excel_file": "extraction_results/extracted_values.xlsx",
    "case_sensitive": false
  },
  "extraction_rules": [
    {
      "name": "Invoice_Number",
      "description": "Extract invoice number from documents",
      "target_sentence": "DOC-2024-001 Section 2: Sensitive Information Employee ID: EMP-12345 Social Security: 123 Credit Card: 45 Section 3:",
      "before_text": "DOC-2024-001 Section 2: Sensitive Information Employee ID: EMP-12345 ",
      "after_text": "! Security: 123 Credit Card: 45 Section 3:",
      "value_type": "both",
      "case_sensitive": false,
      "else_if": [
        { "target_sentence": "[Page 1] COMPLEX DOCUMENT TEST Section 1: Regular Text This is normal selectable text. Company: ABC Corporation Document ID", "before_text": "[Page 1] COMPLEX DOCUMENT TEST Section 1: Regular Text This is normal ", "after_text": " text. Company: ABC Corporation Document ID" },
        { "target_sentence": "Invoice #: INV-2024010", "before_text": "Invoice #", "after_text": "" },
        { "target_sentence": "Invoice ID: INV-2024010", "before_text": "Invoice ID:", "after_text": "" }
      ]
    },
    {
      "name": "Total_Amount",
      "description": "Extract total amount from invoices",
      "target_sentence": "Total: $1,234.56",
      "before_text": "Total:",
      "after_text": "",
      "value_type": "number",
      "case_sensitive": false,
      "else_if": [
        { "target_sentence": "Amount Due: $1,234.56", "before_text": "Amount Due:", "after_text": "" },
        { "target_sentence": "Balance Due: $1,234.56", "before_text": "Balance Due:", "after_text": "" },
        { "target_sentence": "Grand Total: $1,234.56", "before_text": "Grand Total:", "after_text": "" },
        { "target_sentence": "Total Due: $1,234.56", "before_text": "Total Due:", "after_text": "" },
        { "target_sentence": "Total Amount: $1,234.56", "before_text": "Total Amount:", "after_text": "" }
      ]
    },
    {
      "name": "Company_Name",
      "description": "Extract company name from documents",
      "target_sentence": "Company: ABC Corporation Ltd.",
      "before_text": "Company:",
      "after_text": "",
      "value_type": "text",
      "case_sensitive": false,
      "else_if": [
        { "target_sentence": "From: ABC Corporation", "before_text": "From:", "after_text": "" },
        { "target_sentence": "Vendor: ABC Corporation", "before_text": "Vendor:", "after_text": "" },
        { "target_sentence": "Seller: ABC Corporation", "before_text": "Seller:", "after_text": "" },
        { "target_sentence": "Company: ABC Corporation", "before_text": "Company:", "after_text": "" }
      ]
    },
    {
      "name": "Customer_Name",
      "description": "Extract customer name from documents",
      "target_sentence": "Customer: John Smith",
      "before_text": "Customer:",
      "after_text": "",
      "value_type": "text",
      "case_sensitive": false,
      "else_if": [
        { "target_sentence": "Bill To: John Smith", "before_text": "Bill To:", "after_text": "" },
        { "target_sentence": "Billed To: John Smith", "before_text": "Billed To:", "after_text": "" },
        { "target_sentence": "Customer: John Smith", "before_text": "Customer:", "after_text": "" },
        { "target_sentence": "Client: John Smith", "before_text": "Client:", "after_text": "" }
      ]
    },
    {
      "name": "Due_Date",
      "description": "Extract due date from invoices",
      "target_sentence": "Due Date: 12/31/2024",
      "before_text": "Due Date:",
      "after_text": "",
      "value_type": "number",
      "case_sensitive": false,
      "else_if": [
        { "target_sentence": "Due: 12/31/2024", "before_text": "Due:", "after_text": "" },
        { "target_sentence": "Payment Due: 12/31/2024", "before_text": "Payment Due:", "after_text": "" },
        { "target_sentence": "Due On: 12/31/2024", "before_text": "Due On:", "after_text": "" }
      ]
    }
  ]
}
