{
  "settings": {
    "text_files_folder": "extracted_text_files",
    "output_excel_file": "extraction_results/extracted_values.xlsx",
    "case_sensitive": false
  },
  "extraction_rules": [
    {
      "name": "Invoice_Number",
      "description": "Extract invoice number from documents",
      "target_sentence": "[Page 1] DETAILED INVOICE From: ABC Corporation 123 Business Street Business City, BC 12345 Company",
      "before_text": "[Page 1] DETAILED INVOICE From: ABC Corporation ",
      "after_text": " Business Street Business City, BC 12345 Compan",
      "value_type": "both",
      "case_sensitive": false,
      "else_if": [
        {
          "target_sentence": "Invoice Number: INV-2024010 Date: 10/11/2025 Customer Name: John Smith Description Quantity Price Total Consulting Services",
          "before_text": "Invoice Number: INV-2024010 Date: ",
          "after_text": " Customer Name: John Smith Description Quantity Price Total Consulting Services",
          "value_type": "both",
          "case_sensitive": false
        },
        {
          "target_sentence": "Invoice No.: INV-2024-001",
          "before_text": "Invoice No.:",
          "after_text": "",
          "value_type": "both",
          "case_sensitive": false
        },
        {
          "target_sentence": "Invoice: INV-2024-001 Date:",
          "before_text": "Invoice:",
          "after_text": "Date:",
          "value_type": "both",
          "case_sensitive": false
        }
      ]
    },
    {
      "name": "Total_Amount",
      "description": "Extract total amount from invoices",
      "target_sentence": "Total: $1,234.56",
      "before_text": "Total:",
      "after_text": "",
      "value_type": "number",
      "case_sensitive": false,
      "else_if": [
        {
          "target_sentence": "Amount Due: $1,234.56",
          "before_text": "Amount Due:",
          "after_text": "",
          "value_type": "number",
          "case_sensitive": false
        },
        {
          "target_sentence": "Balance Due: $1,234.56",
          "before_text": "Balance Due:",
          "after_text": "",
          "value_type": "number",
          "case_sensitive": false
        },
        {
          "target_sentence": "Total Amount: $1,234.56",
          "before_text": "Total Amount:",
          "after_text": "",
          "value_type": "number",
          "case_sensitive": false
        }
      ]
    },
    {
      "name": "Company_Name",
      "description": "Extract company name from documents",
      "target_sentence": "Company: ABC Corporation Ltd.",
      "before_text": "Company:",
      "after_text": "",
      "value_type": "text",
      "case_sensitive": false,
      "else_if": [
        {
          "target_sentence": "Vendor: ABC Corporation",
          "before_text": "Vendor:",
          "after_text": "",
          "value_type": "text",
          "case_sensitive": false
        },
        {
          "target_sentence": "From: ABC Corporation",
          "before_text": "From:",
          "after_text": "",
          "value_type": "text",
          "case_sensitive": false
        },
        {
          "target_sentence": "Company Name: ABC Corporation",
          "before_text": "Company Name:",
          "after_text": "",
          "value_type": "text",
          "case_sensitive": false
        }
      ]
    },
    {
      "name": "Customer_Name",
      "description": "Extract customer name from documents",
      "target_sentence": "Customer: John Smith",
      "before_text": "Customer:",
      "after_text": "",
      "value_type": "text",
      "case_sensitive": false,
      "else_if": [
        {
          "target_sentence": "Bill To: John Smith",
          "before_text": "Bill To:",
          "after_text": "",
          "value_type": "text",
          "case_sensitive": false
        },
        {
          "target_sentence": "Customer Name: John Smith",
          "before_text": "Customer Name:",
          "after_text": "",
          "value_type": "text",
          "case_sensitive": false
        }
      ]
    },
    {
      "name": "Due_Date",
      "description": "Extract due date from invoices",
      "target_sentence": "Due Date: 12/31/2024",
      "before_text": "Due Date:",
      "after_text": "",
      "value_type": "number",
      "case_sensitive": false,
      "else_if": [
        {
          "target_sentence": "Due: 12/31/2024",
          "before_text": "Due:",
          "after_text": "",
          "value_type": "number",
          "case_sensitive": false
        },
        {
          "target_sentence": "Payment Due: 12/31/2024",
          "before_text": "Payment Due:",
          "after_text": "",
          "value_type": "number",
          "case_sensitive": false
        }
      ]
    }
  ]
}
